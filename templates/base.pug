mixin HrImg(url, position)
    .hr-img
        img(src=url style='top:-' + position + ';')
        .wrapper.d-flex.flex-column.justify-content-center
            if block
                block

mixin Youtube(url, width, height)
    iframe(width=width?width:'1280' height=height?height:'720' src=url frameborder='0' allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen)&attributes(attributes)

